<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompat.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AppCompat.PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppCompat.NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppCompat.NeutralButtonStyle</item>
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/text_time</item>
        <item name="android:windowBackground">@drawable/bg_dialog_material</item>
    </style>

    <style name="AppCompat.PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_time</item>
    </style>

    <style name="AppCompat.NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="AppCompat.NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="AppCompat.Progress" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AppCompat.PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppCompat.NegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppCompat.NeutralButtonStyle</item>
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/text_time</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
